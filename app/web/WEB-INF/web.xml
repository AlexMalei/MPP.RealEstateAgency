<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_1.xsd"
           version="3.1">

    <servlet>
        <servlet-name>DBConnectionServletName</servlet-name>
        <servlet-class>DBConnectionServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AuthController</servlet-name>
        <servlet-class>controllers.AuthControllerImpl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DBConnectionServletName</servlet-name>
        <url-pattern>/dbConnection</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AuthController</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>
</web-app>
